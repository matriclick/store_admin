<div class="row">
	<% unless @supplier_account.logo.blank? %>
		<%= image_tag @supplier_account.logo.url(:medium) %>
	<% end %>
</div>
<div class="row">
	<div class="span4">
		<h1>Opciones</h1>
		<ul class="dropdown-menu" role="menu" aria-labelledby="dropdownMenu" style="display: block; position: static; margin-bottom: 5px; *width: 180px;">
		  	<li><%= link_to 'Administrar GiftCards', supplier_account_gift_cards_path(supplier_account_id: @supplier_account.id) %></li>
			<li class="divider"></li>  
			<li><%= link_to 'Administrar Bodegas', supplier_account_warehouses_path(supplier_account_id: @supplier_account.id) %></li>
		  	<li class="divider"></li>
		  	<li><%= link_to 'Administrar Proveedores y Compras', supplier_account_providers_path(supplier_account_id: @supplier_account.id) %></li>
		  	<li class="divider"></li>
		  	<li class="dropdown-submenu">
			    <a tabindex="-1" href="#">Administración General</a>
			    <ul class="dropdown-menu">
					<% if current_user.store_admin_privileges.include? StoreAdminPrivilege.find_by_name("Administrar Tallas") %>
						<li><%= link_to 'Administrar Tallas de Productos', supplier_account_sizes_path(supplier_account_id: @supplier_account.id) %></li>
					<% end %>
					<% if current_user.store_admin_privileges.include? StoreAdminPrivilege.find_by_name("Administrar Categorias") %>
						<li><%= link_to 'Administrar Categorías de Productos', supplier_account_product_categories_path(supplier_account_id: @supplier_account.id) %></li>
					<% end %>
					<li><%= link_to 'Administrar Categorías de Gastos', supplier_account_expense_types_path(supplier_account_id: @supplier_account.id) %></li>
					<li><%= link_to 'Administrar Monedas', supplier_account_currencies_path(supplier_account_id: @supplier_account.id) %></li>
					<li><%= link_to 'Administrar Formas de Pago', supplier_account_payment_methods_path(@supplier_account) %></li>
			    </ul>
		  	</li>
			<li class="divider"></li>
			<li><%= link_to 'Administrar Usuarios y Permisos de '+@supplier_account.name, supplier_account_path(@supplier_account) %></li>
			<li class="divider"></li>
			<li><%= link_to 'Editar Datos Generales de '+@supplier_account.name, edit_supplier_account_path(@supplier_account) %></li>
		</ul>
	</div>
	<div class="span4">
		<h1>Datos Generales</h1>
		<dl class="dl-horizontal">
			<dt><strong>Web:</strong></dt>
			<dd><%= link_to @supplier_account.store_web, @supplier_account.store_web, target: '_blank' %></dd>
			<dt><strong>Texto Correo:</strong></dt>
			<dd><%= @supplier_account.purchase_details_mail_text %></dd>
		</dl>
	</div>
</div>