<%= form_for @supplier_account, :html => { :class => 'form-horizontal', :multipart => true } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :store_web, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :store_web, :class => 'text_field' %>
	<p>Por ejemplo wwww.inventariolibre.com</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :logo, :class => 'control-label' %>
    <div class="controls">
      <%= f.file_field :logo %>
	  <p>El logo debe ser en formato JPG con fondo blanco. De lo contrario se ver√° mal.</p>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :purchase_details_mail_text, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :purchase_details_mail_text, :cols => "30", :rows => "10" %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                supplier_accounts_path, :class => 'btn' %>
  </div>
<% end %>
