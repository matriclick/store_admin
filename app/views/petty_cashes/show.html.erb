<%- model_class = PettyCash -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:close_amount) %>:</strong></dt>
  <dd><%= @petty_cash.close_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_account_id) %>:</strong></dt>
  <dd><%= @petty_cash.supplier_account_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:user_id) %>:</strong></dt>
  <dd><%= @petty_cash.user_id %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              supplier_account_petty_cashes_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supplier_account_petty_cash_path(supplier_account_id: @supplier_account.id, id: @petty_cash.id), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supplier_account_petty_cash_path(supplier_account_id: @supplier_account.id, id: @petty_cash.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>