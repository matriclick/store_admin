<%= form_for [@supplier_account, @daily_store_datum], :html => { :class => 'form-horizontal' } do |f| %>
<%= render 'layouts/form_errors', object: @daily_store_datum %>
  <%= f.hidden_field :supplier_account_id, :value => @supplier_account.id %>
  <div class="control-group">
    <%= f.label :date, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :date, :class => 'text_field datepicker' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :warehouse_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :warehouse_id, @supplier_account.warehouses, :id, :name, 
								{ :allow_blank => false, :default => @supplier_account.warehouses.where(:default => true).first.id } %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :came_in_clients, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :came_in_clients, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :comments, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :comments, rows: 4, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                supplier_account_daily_store_data_path, :class => 'btn' %>
  </div>
<% end %>
