<%- model_class = DailyStoreDatum -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:date) %>:</strong></dt>
  <dd><%= @daily_store_datum.date %></dd>
  <dt><strong><%= model_class.human_attribute_name(:came_in_clients) %>:</strong></dt>
  <dd><%= @daily_store_datum.came_in_clients %></dd>
  <dt><strong><%= model_class.human_attribute_name(:supplier_account_id) %>:</strong></dt>
  <dd><%= @daily_store_datum.supplier_account.name %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              supplier_account_daily_store_data_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_supplier_account_daily_store_datum_path(supplier_account_id: @supplier_account.id, id: @daily_store_datum.id), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              supplier_account_daily_store_datum_path(supplier_account_id: @supplier_account.id, id: @daily_store_datum.id),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
