<div style="text-align:center">
	<h2>Crear una cuenta</h2>

	<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
	  <%= devise_error_messages! %>
	  <div class="row">
		<div class="span12">
	  		<%= f.email_field :email, placeholder: 'Correo', autofocus: true %>
		</div>
	  </div>
	  <div class="row">
		<div class="span12">
	    	<%= f.password_field :password, placeholder: 'Clave', autocomplete: "off" %>
	    	<%= f.password_field :password_confirmation, placeholder: 'Repite tu clave', autocomplete: "off" %>
		</div>
	  </div>
	  <div class="row">
		<div class="span12">
			<%= f.submit "Crear cuenta", class: 'btn btn-default', style: 'vertical-align:top;' %>
		</div>
	  </div>
	<% end %>

	<%= render "devise/shared/links" %>
</div>