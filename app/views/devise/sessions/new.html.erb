<div style="text-align:center">
	<h2>Ingresa con tu correo y clave</h2>

	<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
	  <div class="row">
		<div class="span12">
	  	<%= f.email_field :email, placeholder: 'Correo', autofocus: true %>
		<%= f.password_field :password, placeholder: 'Clave', autocomplete: "off" %>
		<%= f.submit "Ingresar", class: 'btn btn-default', style: 'vertical-align:top;' %>
		</div>
	  </div>
	  <% if devise_mapping.rememberable? -%>
	  <div class="row">
		<div class="span12"><%= f.check_box :remember_me %> <%= f.label :remember_me, 'Recordarme en este computador', class: 'checkbox inline' %></div>
	  </div>
	  <% end -%>
	<% end %>

	<%= render "devise/shared/links" %>
</div>